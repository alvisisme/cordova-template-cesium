<widget id="io.cordova.hellocesium" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hello Cesium</name>
    <description>
        A sample Apache Cordova application with Cesium.
    </description>
    <author email="alvisisme@163.com" href="https://www.alvisisme.com">
        Alvis Zhao
    </author>
    <content src="index.html" />
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="public/logo/icon.png" />
    <platform name="android">
        <hook type="before_build" src="hooks/android/before_build.js"></hook>
        <allow-intent href="market:*" />
    </platform>
</widget>